Sub Copy_And_Group_ARF_Analysis()

    Dim wsSource As Worksheet
    Dim wsNew As Worksheet
    Dim LR As Long
    Dim r As Long

    Application.ScreenUpdating = False
    Application.EnableEvents = False

    '--------------------------------------------------
    ' Copy active worksheet and rename
    '--------------------------------------------------
    Set wsSource = ActiveSheet
    wsSource.Copy After:=wsSource
    Set wsNew = ActiveSheet

    wsNew.Name = "ARF Analysis"

    '--------------------------------------------------
    ' Find row containing "ARF Analysis" in Column A
    '--------------------------------------------------
    LR = 0
    For r = 1 To wsNew.Cells(wsNew.Rows.Count, "A").End(xlUp).Row
        If InStr(1, wsNew.Cells(r, "A").Value, "ARF Analysis", vbTextCompare) > 0 Then
            LR = r
            Exit For
        End If
    Next r

    If LR = 0 Then
        MsgBox "'ARF Analysis' not found in Column A.", vbExclamation
        GoTo CleanExit
    End If

    '--------------------------------------------------
    ' Group rows 5 through (LR - 1)
    '--------------------------------------------------
    If LR > 5 Then
        wsNew.Rows("5:" & LR - 1).Group
    End If

    '--------------------------------------------------
    ' Collapse all groups
    '--------------------------------------------------
    wsNew.Outline.ShowLevels RowLevels:=1

CleanExit:
    Application.ScreenUpdating = True
    Application.EnableEvents = True

End Sub
